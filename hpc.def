Bootstrap: docker
From: ubuntu:22.04



%files
  src /opt
  CMakeLists.txt /opt

%post
  apt-get update
  apt-get -y install build-essential git curl tar zip unzip wget pkg-config m4 python3

  mkdir -p /opt/ext

  # CMake 3.29.2 installation
  CMAKE_VERSION=3.29.2

  cd /usr/local
  wget https://github.com/Kitware/CMake/releases/download/v$CMAKE_VERSION/cmake-$CMAKE_VERSION-linux-x86_64.sh
  chmod +x ./cmake-$CMAKE_VERSION-linux-x86_64.sh
  ./cmake-$CMAKE_VERSION-linux-x86_64.sh --skip-license
  rm cmake-$CMAKE_VERSION-linux-x86_64.sh

  # Install GMP
  GMP_VERSION=6.3.0
  cd /opt/ext
  wget https://ftp.gnu.org/gnu/gmp/gmp-$GMP_VERSION.tar.gz
  tar -xzf ./gmp-$GMP_VERSION.tar.gz
  rm gmp-$GMP_VERSION.tar.gz
  mv gmp-$GMP_VERSION gmp
  cd gmp
  ./configure
  make -j$(nproc)

  # GMP Optimizations
  # cd tune
  # make -j$(nproc) tuneup
  # ./tuneup

  # Install MPI
  MPI_VERSION=3.1.4
  cd /opt/ext
  wget https://download.open-mpi.org/release/open-mpi/v3.1/openmpi-$MPI_VERSION.tar.bz2
  tar -jxpf openmpi-$MPI_VERSION.tar.bz2
  rm openmpi-$MPI_VERSION.tar.bz2 # remove compressed file
  cd openmpi-$MPI_VERSION
  ./configure --prefix=/opt/ext/openmpi
  make -j$(nproc) all
  make install
  cd ..
  rm -rf openmpi-$MPI_VERSION # remove source

  cd /opt
  cmake -DCMAKE_BUILD_TYPE=Release -S . -B out/build -D CMAKE_CXX_COMPILER=/opt/ext/openmpi/bin/mpic++ -D CMAKE_C_COMPILER=/opt/ext/openmpi/bin/mpicc
  cd out/build
  make

%environment
  export PMIX_MCA_pcompress_base_silence_warning=1
  export CMAKE_C_COMPILER=/opt/ext/openmpi/bin/mpicc
  export CMAKE_CXX_COMPILER=/opt/ext/openmpi/bin/mpi++
  export CMAKE_MAKE_PROGRAM=/usr/bin/make
  export LD_LIBRARY_PATH=/opt/ext/gmp/.libs:/opt/ext/fmt/out/build:/opt/ext/openmpi/lib
  export OMP_NUM_THREADS=1